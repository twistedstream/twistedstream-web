{
  "name": "twistedstream-web",
  "version": "1.1.0",
  "private": true,
  "description": "The web app powering www.twistedstream.com",
  "main": "index.js",
  "engines": {
    "node": ">=16.18.0",
    "npm": ">=8.19.2"
  },
  "config": {
    "docker_repo": "twistedstream"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts | pino-pretty",
    "format": "prettier --write .",
    "test": "env $(grep -v '^#' ./.env.test | xargs) tap --ts",
    "image:build": "DOCKER_BUILDKIT=1 docker build --tag \"${npm_package_config_docker_repo}/${npm_package_name}:${npm_package_version}\" .",
    "image:remove": "docker rmi \"${npm_package_config_docker_repo}/${npm_package_name}:${npm_package_version}\"",
    "container:run": "docker run --name \"${npm_package_name}\" -d -p 8000:8000 -e LOG_LEVEL=debug \"${npm_package_config_docker_repo}/${npm_package_name}:${npm_package_version}\"",
    "container:logs": "docker logs -f \"${npm_package_name}\" | pino-pretty",
    "container:stop": "docker stop \"${npm_package_name}\"",
    "container:ssh": "docker exec -it \"${npm_package_name}\" /bin/sh",
    "container:remove": "docker rm -f \"${npm_package_name}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/twistedstream/twistedstream-web.git"
  },
  "author": "twistedstream",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twistedstream/twistedstream-web/issues"
  },
  "homepage": "https://github.com/twistedstream/twistedstream-web#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^6.0.6",
    "express-pino-logger": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "pino": "^8.7.0",
    "short-unique-id": "^4.4.4"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.14",
    "@types/express-pino-logger": "^4.0.3",
    "@types/node": "^18.11.3",
    "@types/pino": "^7.0.5",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@types/tap": "^15.0.7",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "sinon": "^14.0.1",
    "supertest": "^6.3.0",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "tap": {
    "coverage-map": "code-coverage-map.js"
  }
}
